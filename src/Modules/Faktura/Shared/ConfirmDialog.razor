@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Best√§tigung</MudText>
    </TitleContent>

    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Abbrechen</MudButton>
        <MudButton Color="@Color" OnClick="Confirm">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public IMudDialogInstance Dialog { get; set; } = default!;

    [Parameter] public string ContentText { get; set; } = "";
    [Parameter] public string ButtonText { get; set; } = "";
    [Parameter] public Color Color { get; set; }

    void Cancel() => Dialog.Cancel();
    void Confirm() => Dialog.Close(DialogResult.Ok(true));
}
